@model DdmWebClient.Models.MainControllerModels.UserInfoModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        Username [@Model.UserInfo.Name]
    </div>
    <div>
        UserId   [@Model.UserInfo.Id]
    </div>
    <div>
        Friends Id:
        @foreach (var friend in Model.UserInfo.FriendsId)
        {
            <div>
                [@friend]
            </div>
        }
    </div>
    <div>
        <a href="/Main/AddNewFriend/?userId=@Model.UserInfo.Id">Add Friend</a>
    </div>

    <div>
        Albums:
        
        @foreach (var album in Model.UserInfo.Albums)
        {
            <div>
                AlbumName [@album.Name]
            </div>   
            <div>
                AlbumId [@album.Id]
            </div> 
            
            <div>
                Images:
                
                @foreach (var file in album.Files)
                {
                    <div>
                        FileName [@file.Name]
                    </div>
                    <div>
                        FileId [@file.Id]
                    </div>
                    <div>
                        <img src="@Model.GetImagePath(file.Id)" width="100" height="100"/>
                    </div>
                    <div>
                        <a href="/Main/DownloadFile/?fileId=@file.Id">Download</a>
                    </div>
                }
                
                <a href="/Main/AddNewFile/?albumId=@album.Id">Add new file</a>
            </div> 
        }
    </div>
</body>
</html>
